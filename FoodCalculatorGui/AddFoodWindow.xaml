<Window x:Class="FoodCalculatorGui.AddFoodWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FoodCalculatorGui"
        mc:Ignorable="d"
        Title="AddFoodWindow" Height="202.386" Width="228.416" WindowStartupLocation="CenterOwner">
    <Grid>
        <TextBox x:Name="nameTextBox" HorizontalAlignment="Left" Height="23" Margin="10,10,0,0" TextWrapping="Wrap" Text="Name" VerticalAlignment="Top" Width="80" GotFocus="nameTextBox_GotFocus" LostFocus="nameTextBox_LostFocus" TextAlignment="Center" />
        <TextBox x:Name="weightTextBox" HorizontalAlignment="Left" Height="23" Margin="130,38,0,0" TextWrapping="Wrap" Text="100" IsEnabled="False" VerticalAlignment="Top" Width="80" TextAlignment="Center" />
        <TextBox x:Name="caloriesTextBox" HorizontalAlignment="Left" Height="23" Margin="10,38,0,0" TextWrapping="Wrap" Text="Calories" VerticalAlignment="Top" Width="90" GotFocus="caloriesTextBox_GotFocus" LostFocus="caloriesTextBox_LostFocus" />
        <TextBox x:Name="carbohydratesTextBox" HorizontalAlignment="Left" Height="23" Margin="10,66,0,0" TextWrapping="Wrap" Text="Carbohydrates" VerticalAlignment="Top" Width="90" GotFocus="carbohydratesTextBox_GotFocus" LostFocus="carbohydratesTextBox_LostFocus" />
        <TextBox x:Name="fatTextBox" HorizontalAlignment="Left" Height="23" Margin="10,94,0,0" TextWrapping="Wrap" Text="Fat" VerticalAlignment="Top" Width="90" GotFocus="fatTextBox_GotFocus" LostFocus="fatTextBox_LostFocus" />
        <TextBox x:Name="proteinsTextBox" HorizontalAlignment="Left" Height="23" Margin="10,122,0,0" TextWrapping="Wrap" Text="Proteins" VerticalAlignment="Top" Width="90" GotFocus="proteinsTextBox_GotFocus" LostFocus="proteinsTextBox_LostFocus" />
        <Button x:Name="addButton" Content="Add Food" HorizontalAlignment="Left" Margin="135,122,0,0" VerticalAlignment="Top" Width="75" Click="addButton_Click" />
        <Label x:Name="label" Content="Mass(g):" HorizontalAlignment="Left" Margin="135,7,0,0" VerticalAlignment="Top" />
    </Grid>
</Window>